---js
{
	layout: "page.njk",
	body_classes: "cn-ignore component-page",
	eleventyComputed: {
		name: function (data) {
			let url = data.page.url;
			if (url.includes("/src/")) {
				return url.match(/\/src\/([^/]+)/)[1];
			}
		},
		tag: function (data) {
			let name = data.name;
			if (name) {
				return `<${name}>`;
			}
		},
		constructor_name: function (data) {
			let name = data.name;
			if (name) {
				return name.replace(/(^|-)[a-z]/g, $0 => $0.toUpperCase());
			}
		},
		title: function (data) {
			return data.title ?? data.tag;
		},

	}
}
---

<script src="{{ name }}.js" type="module"></script>

